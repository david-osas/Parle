<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.parle">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme2">
        <activity android:name=".MainChatActivity"></activity>
        <activity android:name=".BaseActivity" />
        <activity android:name=".PinActivity" />
        <activity android:name=".concentrateActivity.ConcentrateActivity" />
        <activity android:name=".detailsActivity.DetailsActivity" />
        <activity
            android:name=".signupActivity.SignupActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".loginActivity.LoginActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".MainActivity" />
        <activity android:name=".SelectionActivity" />
        <activity
            android:name=".StudentHomePage"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".splashScreenSide.SplashScreen" android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>